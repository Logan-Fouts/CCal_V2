<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>CCAL v2 GUI</title>
</head>

<body>
    <div class="title-banner">
        <span class="title-main">CCal<span class="title-v2">v2</span></span>
        <span class="title-sub">Contribution Calendar Control Panel</span>
    </div>
    <div class="tabs">
        <button type="button" class="tab-btn active" data-tab="general">General</button>
        <button type="button" class="tab-btn" data-tab="addons">Add-ons</button>
        <button type="button" class="tab-btn" data-tab="trackers">Custom Trackers</button>
    </div>
    <form id="settingsForm" action="/submit" method="post">
        <!-- General Tab -->
        <section class="settings-section tab-content active" id="tab-general">
            <h2>General Settings</h2>
            <label for="github_username">GitHub Username:</label>
            <input type="text" id="github_username" name="GITHUB_USERNAME" value="<%= config.GITHUB_USERNAME || '' %>"><br><br>
            <label for="github_token">GitHub Token:</label>
            <input type="password" id="github_token" name="GITHUB_TOKEN" value="<%= config.GITHUB_TOKEN || '' %>">
            <a href="https://github.com/settings/tokens" target="_blank" rel="noopener noreferrer">Get a GitHub Token</a>
            <br><br>
            <label for="startup_animation">Startup Animation:</label>
            <select id="startup_animation" name="STARTUP_ANIMATION">
                <option value="1" <%= config.STARTUP_ANIMATION == 1 ? 'selected' : '' %>>Color Wipe &mdash; Red, Green, Blue wipe</option>
                <option value="2" <%= config.STARTUP_ANIMATION == 2 ? 'selected' : '' %>>Theater Chase &mdash; White chase effect</option>
                <option value="3" <%= config.STARTUP_ANIMATION == 3 ? 'selected' : '' %>>Rainbow Cycle &mdash; Animated rainbow</option>
                <option value="0" <%= !config.STARTUP_ANIMATION || config.STARTUP_ANIMATION == 0 ? 'selected' : '' %>>None</option>
            </select>
            <br><br>
            
            <!-- Brightness Section -->
            <h3>Brightness</h3>            <label for="brightness">LED Brightness (0.0-1.0):</label>
            <input type="number" id="brightness" name="BRIGHTNESS" min="0" max="1" step="0.01" value="<%= config.BRIGHTNESS != null ? config.BRIGHTNESS : 0.5 %>">
            <br><br>

            <!-- LED On/Off Times Section -->
            <h3>LED On/Off Times</h3>
            <label for="on_time">On Time (hour, 1-24):</label>
            <input type="number" id="on_time" name="ON_TIME" min="1" max="24" value="<%= config.ON_TIME != null ? config.ON_TIME : 9 %>">
            <br><br>
            <label for="off_time">Off Time (hour, 1-24):</label>
            <input type="number" id="off_time" name="OFF_TIME" min="1" max="24" value="<%= config.OFF_TIME != null ? config.OFF_TIME : 22 %>">
            <br><br>

            <!-- Weather Section -->
            <h3>Weather Location</h3>
            <label for="weather_lat">Latitude:</label>
            <input type="number" step="any" id="weather_lat" name="WEATHER_LAT" value="<%= config.WEATHER_LAT != null ? config.WEATHER_LAT : '' %>">
            <br><br>
            <label for="weather_lon">Longitude:</label>
            <input type="number" step="any" id="weather_lon" name="WEATHER_LON" value="<%= config.WEATHER_LON != null ? config.WEATHER_LON : '' %>">
            <a href="https://www.latlong.net/" target="_blank" rel="noopener noreferrer">Find your Latitude/Longitude</a>
            <br><br>

            <!-- OpenWeatherMap API Key Section -->
            <h3>OpenWeatherMap API Key</h3>
            <label for="openweathermap_api_key">API Key:</label>
            <input type="password" id="openweathermap_api_key" name="OPENWEATHERMAP_API_KEY" value="<%= config.OPENWEATHERMAP_API_KEY || '' %>">
            <a href="https://home.openweathermap.org/api_keys" target="_blank" rel="noopener noreferrer">Get an OpenWeatherMap API Key</a>
            <br><br>
        </section>
        <!-- Add-ons Tab -->
        <section class="settings-section tab-content" id="tab-addons">
            <div class="subtabs">
                <button type="button" class="subtab-btn active" data-subtab="tailscale">Tailscale</button>
                <button type="button" class="subtab-btn" data-subtab="pihole">Pi-hole</button>
                <button type="button" class="subtab-btn" data-subtab="syncthing">Syncthing</button>
            </div>
            <div class="subtab-content active" id="subtab-tailscale">
                <h2>Tailscale Node Setup</h2>
                <label for="tailscale_enable">Enable Tailscale:</label>
                <input type="checkbox" id="tailscale_enable" name="TAILSCALE_ENABLE" <%= config.TAILSCALE_ENABLE ? 'checked' : '' %>><br><br>
            </div>
            <div class="subtab-content" id="subtab-pihole">
                <h2>Pi-hole Setup</h2>
                <label for="pihole_enable">Enable Pi-hole:</label>
                <input type="checkbox" id="pihole_enable" name="PIHOLE_ENABLE" <%= config.PIHOLE_ENABLE ? 'checked' : '' %>><br><br>
            </div>
            <div class="subtab-content" id="subtab-syncthing">
                <h2>Syncthing Setup</h2>
                <label for="syncthing_enable">Enable Syncthing:</label>
                <input type="checkbox" id="syncthing_enable" name="SYNCTHING_ENABLE" <%= config.SYNCTHING_ENABLE ? 'checked' : '' %>><br><br>
            </div>
        </section>
        
        <input type="submit" value="Save All Settings">
    </form>
    
    <!-- Custom Trackers Tab (outside form to avoid conflicts) -->
    <div class="settings-form-container" style="display: none;">
        <section class="settings-section tab-content" id="tab-trackers">
            <h2>Custom Trackers</h2>
            
            <!-- Create New Tracker -->
            <div class="tracker-section">
                <h3>Create New Tracker</h3>
                <div class="create-tracker-form">
                    <label for="new-tracker-name">Tracker Name:</label>
                    <input type="text" id="new-tracker-name" placeholder="e.g., Exercise, Reading, etc.">
                    
                    <label for="new-tracker-metric">Metric:</label>
                    <input type="text" id="new-tracker-metric" placeholder="e.g., minutes, pages, reps">
                    
                    <label for="new-tracker-color">Color:</label>
                    <input type="color" id="new-tracker-color" value="#1520e0">
                    
                    <button type="button" id="create-tracker-btn" class="action-btn create-btn">Create Tracker</button>
                </div>
            </div>
            
            <!-- Existing Trackers -->
            <div class="tracker-section">
                <h3>Your Trackers</h3>
                <div id="trackers-list">
                    <div class="loading-message">Loading trackers...</div>
                </div>
            </div>
        </section>
    </div>
    <!-- Stupid shit html cant get a nice space after the form without this -->
    <div class="after-form-spacer"></div>
    <script src="main.js"></script>
</body>

</html>